<h4>Pricing</h4>
<form id="calculationForm">
    <!-- Input box for number of hours -->
    <label for="hours">Enter the number of hours:</label>
    <input type="number" id="hours" name="hours" min="1" required>

    <br><br>

    <!-- Non-editable box showing the charge per hour -->
    <label for="charge">Charge per hour:</label>
    <input type="text" id="charge" value="$5" readonly>

    <br><br>

    <!-- Button to calculate total -->
    <button type="button" onclick="calculateTotal()">Calculate Total</button>

    <br><br>

    <!-- Output box showing the total -->
    <label for="total">Total Cost:</label>
    <input type="text" id="total" readonly>
</form>

<script>
    // Function to calculate the total cost
    function calculateTotal() {
        var hours = parseFloat(document.getElementById('hours').value); // Ensure it's treated as a number
        var chargePerHour = 5; // Fixed charge per hour
        if (isNaN(hours) || hours <= 0) {
            alert("Please enter a valid positive number of hours.");
        } else {
            var total = hours * chargePerHour;
            document.getElementById('total').value = "$" + total.toFixed(2); // Display 2 decimal places
        }
    }
</script>
